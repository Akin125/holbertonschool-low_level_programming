# Basic Make file, but with flags

CC=gcc
SRC=holberton.c main.c
OBJ=$(SRC:.c=.o)
NAME=holberton
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(SRC) $(NAME)
$(NAME): m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

fclean: oclean clean 

oclean:
	$(RM) $(OBJ)
.PHONY: clean oclean fclean re all $(NAME)
clean:
	$(RM) *~ $(NAME) 

re: oclean all
